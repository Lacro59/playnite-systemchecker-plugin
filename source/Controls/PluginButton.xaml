<controls:PluginUserControlExtend
        xmlns:controls="clr-namespace:CommonPluginsShared.Controls" 
        x:Class="SystemChecker.Controls.PluginButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:SystemChecker.Controls"
        mc:Ignorable="d" d:DesignHeight="40" d:DesignWidth="40"
        d:DataContext="{d:DesignInstance local:PluginButtonDataContext, IsDesignTimeCreatable=True}">

    <Button Name="PART_PluginButton"
            Click="PART_PluginButton_Click" Style="{StaticResource {x:Type Button}}">
        <TextBlock Text="{Binding Text, Mode=OneWay}" FontFamily="{DynamicResource CommonFont}"
                   FontSize="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=FontSize}" />
    </Button>
</controls:PluginUserControlExtend>
